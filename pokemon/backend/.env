# Copy this file to .env in the backend directory
# Rename this file from env-template.txt to .env

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# For local MongoDB (default):
MONGODB_URI=mongodb://localhost:27017/pokemon-battle

# For MongoDB Atlas (cloud), replace with your connection string:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pokemon-battle?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345
JWT_EXPIRE=7d

# Admin Credentials (change these in production)
ADMIN_EMAIL=admin@pokemon.com
ADMIN_PASSWORD=admin123

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173
